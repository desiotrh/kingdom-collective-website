# Kingdom Studios App - Local Development Environment
# Copy this file to .env.local and add your actual API keys

# Environment
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1

# ===========================
# STEP 1: FIREBASE SETUP (Required)
# ===========================
# Go to: https://console.firebase.google.com/
# 1. Create new project: "kingdom-studios-dev"
# 2. Enable Authentication, Firestore, Storage
# 3. Get config from Project Settings > General > Your apps

EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=kingdom-studios-dev.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=kingdom-studios-dev
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=kingdom-studios-dev.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ===========================
# STEP 2: OPENAI API (Required)
# ===========================
# Go to: https://platform.openai.com/api-keys
# Create new secret key for your project

EXPO_PUBLIC_OPENAI_API_KEY=sk-your_openai_api_key_here
EXPO_PUBLIC_OPENAI_ORGANIZATION=your_openai_org_id

# ===========================
# STEP 3: SOCIAL MEDIA APIS (Optional - can test without)
# ===========================

# Facebook/Instagram - https://developers.facebook.com/
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
EXPO_PUBLIC_FACEBOOK_APP_SECRET=your_facebook_app_secret
EXPO_PUBLIC_INSTAGRAM_CLIENT_ID=your_instagram_client_id

# Twitter - https://developer.twitter.com/
EXPO_PUBLIC_TWITTER_API_KEY=your_twitter_api_key
EXPO_PUBLIC_TWITTER_API_SECRET=your_twitter_api_secret

# LinkedIn - https://www.linkedin.com/developers/
EXPO_PUBLIC_LINKEDIN_CLIENT_ID=your_linkedin_client_id
EXPO_PUBLIC_LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# TikTok - https://developers.tiktok.com/
EXPO_PUBLIC_TIKTOK_CLIENT_KEY=your_tiktok_client_key

# YouTube - https://console.cloud.google.com/
EXPO_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key

# Pinterest - https://developers.pinterest.com/
EXPO_PUBLIC_PINTEREST_APP_ID=your_pinterest_app_id

# ===========================
# STEP 4: EMAIL SERVICE (Optional - can test without)
# ===========================
# Choose one: SendGrid (recommended) or Mailgun

# SendGrid - https://sendgrid.com/
EXPO_PUBLIC_SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Mailgun - https://www.mailgun.com/
EXPO_PUBLIC_MAILGUN_API_KEY=your_mailgun_api_key
EXPO_PUBLIC_MAILGUN_DOMAIN=your_domain.com

# ===========================
# STEP 5: PAYMENT PROCESSING (Optional)
# ===========================
# Stripe - https://dashboard.stripe.com/apikeys

EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
EXPO_PUBLIC_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================
# STEP 6: ANALYTICS (Optional)
# ===========================

# Google Analytics - https://analytics.google.com/
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=G-your_ga_tracking_id

# Mixpanel - https://mixpanel.com/
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ===========================
# STEP 7: ERROR TRACKING (Optional)
# ===========================

# Sentry - https://sentry.io/
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ===========================
# DEVELOPMENT SETTINGS
# ===========================
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_ENABLE_BETA_FEATURES=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_DEBUG_MODE=true

# File Storage (Development)
EXPO_PUBLIC_AWS_S3_BUCKET=kingdom-studios-dev-assets
EXPO_PUBLIC_AWS_REGION=us-east-1

# Feature Flags
EXPO_PUBLIC_ENABLE_CACHING=true
EXPO_PUBLIC_CACHE_TTL=1800

# Rate Limiting (Development - more lenient)
EXPO_PUBLIC_API_RATE_LIMIT=2000
EXPO_PUBLIC_OPENAI_RATE_LIMIT=120
EXPO_PUBLIC_SOCIAL_API_RATE_LIMIT=600
