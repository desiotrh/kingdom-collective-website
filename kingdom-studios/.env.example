# Kingdom Studios App - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ==============================================
# FIREBASE CONFIGURATION
# ==============================================
# Get these from Firebase Console: https://console.firebase.google.com/
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# ==============================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_android_client_id
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_ios_client_id

# ==============================================
# FACEBOOK INTEGRATION
# ==============================================
# Get this from Facebook Developers: https://developers.facebook.com/
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# ==============================================
# AI CONTENT GENERATION
# ==============================================
# OpenAI API - Get from: https://platform.openai.com/api-keys
EXPO_PUBLIC_OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenRouter API (Optional) - Get from: https://openrouter.ai/keys
EXPO_PUBLIC_OPENROUTER_API_KEY=sk-or-your_openrouter_key_here

# ==============================================
# E-COMMERCE PLATFORM APIS
# ==============================================
# Etsy API - Get from: https://www.etsy.com/developers/your-account
EXPO_PUBLIC_ETSY_API_KEY=your_etsy_api_key_here

# Printify API - Get from: https://developers.printify.com/
EXPO_PUBLIC_PRINTIFY_API_KEY=your_printify_api_key_here

# Shopify API - Get from your Shopify Partner Dashboard
EXPO_PUBLIC_SHOPIFY_API_KEY=your_shopify_api_key_here
EXPO_PUBLIC_SHOPIFY_STORE_URL=your-store.myshopify.com

# Amazon MWS/SP-API (Advanced)
EXPO_PUBLIC_AMAZON_ACCESS_KEY=your_amazon_access_key
EXPO_PUBLIC_AMAZON_SECRET_KEY=your_amazon_secret_key
EXPO_PUBLIC_AMAZON_MARKETPLACE_ID=your_marketplace_id

# ==============================================
# PAYMENT PROCESSING
# ==============================================
# Stripe API - Get from: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
EXPO_PUBLIC_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# For production, use live keys:
# EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key
# EXPO_PUBLIC_STRIPE_SECRET_KEY=sk_live_your_live_secret_key

# ==============================================
# EMAIL MARKETING PLATFORMS
# ==============================================
# ConvertKit API - Get from: https://app.convertkit.com/account_settings/advanced_settings
EXPO_PUBLIC_CONVERTKIT_API_KEY=your_convertkit_api_key
EXPO_PUBLIC_CONVERTKIT_API_SECRET=your_convertkit_api_secret

# Mailchimp API - Get from: https://mailchimp.com/developer/marketing/api/
EXPO_PUBLIC_MAILCHIMP_API_KEY=your_mailchimp_api_key
EXPO_PUBLIC_MAILCHIMP_SERVER_PREFIX=us1

# ==============================================
# SOCIAL MEDIA APIS (Advanced Features)
# ==============================================
# Instagram Basic Display API
EXPO_PUBLIC_INSTAGRAM_APP_ID=your_instagram_app_id
EXPO_PUBLIC_INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Twitter API v2
EXPO_PUBLIC_TWITTER_API_KEY=your_twitter_api_key
EXPO_PUBLIC_TWITTER_API_SECRET=your_twitter_api_secret
EXPO_PUBLIC_TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# TikTok for Business API
EXPO_PUBLIC_TIKTOK_APP_ID=your_tiktok_app_id
EXPO_PUBLIC_TIKTOK_APP_SECRET=your_tiktok_app_secret

# ==============================================
# ANALYTICS AND TRACKING
# ==============================================
# Google Analytics 4
EXPO_PUBLIC_GA4_MEASUREMENT_ID=G-your_measurement_id
EXPO_PUBLIC_GA4_API_SECRET=your_ga4_api_secret

# Google Tag Manager
EXPO_PUBLIC_GTM_CONTAINER_ID=GTM-your_container_id

# Mixpanel Analytics
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ==============================================
# BACKEND API CONFIGURATION
# ==============================================
# Your backend API URL (we'll set this up next)
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000/api
# For production: https://api.kingdomstudios.app

# API Authentication
EXPO_PUBLIC_API_KEY=your_backend_api_key

# ==============================================
# ADDITIONAL SERVICES
# ==============================================
# Sentry Error Tracking
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Amplitude Analytics
EXPO_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_api_key

# RevenueCat (Subscription Management)
EXPO_PUBLIC_REVENUECAT_API_KEY=your_revenuecat_api_key

# Pusher (Real-time Features)
EXPO_PUBLIC_PUSHER_APP_ID=your_pusher_app_id
EXPO_PUBLIC_PUSHER_KEY=your_pusher_key
EXPO_PUBLIC_PUSHER_SECRET=your_pusher_secret
EXPO_PUBLIC_PUSHER_CLUSTER=us2

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Set to 'development' or 'production'
NODE_ENV=development

# Enable debug mode for testing
EXPO_PUBLIC_DEBUG_MODE=true

# Mock API responses when API keys are missing
EXPO_PUBLIC_ENABLE_MOCKS=true
