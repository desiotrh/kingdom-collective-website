{
  "name": "kingdom-studios-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "kingdom-studios",
    "kingdom-studios-backend",
    "apps/kingdom-stand",
    "packages/stand-core",
    "packages/stand-state-packs",
    "packages/ui"
  ],
  "scripts": {
    "build": "cd kingdom-website && npm run build",
    "start": "npm run start --workspace=kingdom-studios",
    "start:backend": "npm run start --workspace=kingdom-studios-backend",
    "dev:backend": "npm run dev --workspace=kingdom-studios-backend",
    "android": "npm run android --workspace=kingdom-studios",
    "ios": "npm run ios --workspace=kingdom-studios",
    "web": "npm run web --workspace=kingdom-studios"
  },
  "devDependencies": {
    "@types/react": "~19.0.10",
    "artillery": "^2.0.23",
    "autocannon": "^8.0.0",
    "clinic": "^13.0.0",
    "loadtest": "^8.2.0",
    "patch-package": "^8.0.0",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "expo": "^53.0.20",
    "expo-facebook": "^12.2.0",
    "expo-status-bar": "^2.2.3",
    "firebase": "^12.0.0"
  }
}
