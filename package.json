{
  "name": "kingdom-studios-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "kingdom-studios",
    "kingdom-studios-backend",
    "apps/kingdom-stand",
    "packages/stand-core",
    "packages/stand-state-packs",
    "packages/ui"
  ],
  "scripts": {
    "build": "npm --prefix kingdom-website run build",
    "start": "npm run start --workspace=kingdom-studios",
    "start:backend": "npm run start --workspace=kingdom-studios-backend",
    "dev:backend": "npm run dev --workspace=kingdom-studios-backend",
    "android": "npm run android --workspace=kingdom-studios",
    "ios": "npm run ios --workspace=kingdom-studios",
    "web": "npm run web --workspace=kingdom-studios",
    "test:quick": "node testing/localhost/quick-test.js",
    "test:health": "jest testing/localhost/health-check.test.js",
    "test:api": "jest testing/localhost/api-endpoints.test.js",
    "test:integration": "jest testing/integration/frontend-backend.test.js",
    "test:e2e": "jest testing/e2e/user-flow.test.js",
    "test:localhost": "jest testing/localhost",
    "test:load": "node testing/performance/load-test.js",
    "test:stress": "node testing/performance/stress-test.js",
    "test:performance": "npm run test:load && npm run test:stress",
    "test:all": "npm run test:localhost && npm run test:integration && npm run test:e2e",
    "test:watch": "jest --watch testing",
    "test:coverage": "jest --coverage testing",
    "test:a11y": "playwright test tests/accessibility.spec.ts",
    "log:session": "node .chat-history/session-logger-hook.js",
    "audit:workflows": "playwright test --grep \"Workflow Audit\"",
    "audit:kingdom-studios": "playwright test --project=kingdom-studios",
    "audit:circle": "playwright test --project=kingdom-circle",
    "audit:clips": "playwright test --project=kingdom-clips",
    "audit:launchpad": "playwright test --project=kingdom-launchpad",
    "audit:lens": "playwright test --project=kingdom-lens",
    "audit:stand": "playwright test --project=kingdom-stand",
    "audit:voice": "playwright test --project=kingdom-voice",
    "audit:website": "playwright test --project=kingdom-website",
    "audit:all": "playwright test",
    "audit:report": "node tests/workflow-audits/generate-report.js",
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "lighthouse": "lhci autorun",
    "lighthouse:report": "lhci autorun && open lighthouse-reports/index.html",
    "bundlesize": "bundlesize",
    "check-deps": "depcheck",
    "check-unused": "depcheck --ignores=\"@types/*,eslint-*,prettier,husky,lint-staged\"",
    "security:scan": "npm audit && cd kingdom-website && npm audit && cd ../kingdom-studios-backend && npm audit",
    "security:fix": "npm audit fix && cd kingdom-website && npm audit fix && cd ../kingdom-studios-backend && npm audit fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.5",
    "@types/react": "~19.0.10",
    "artillery": "^2.0.23",
    "autocannon": "^8.0.0",
    "axios": "^1.10.0",
    "clinic": "^13.0.0",
    "husky": "^8.0.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "lint-staged": "^15.2.0",
    "bundlesize": "^0.18.1",
    "depcheck": "^1.4.7",
    "@lhci/cli": "^0.13.0",
    "jest": "^29.7.0",
    "loadtest": "^8.2.0",
    "patch-package": "^8.0.0",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "expo": "^53.0.20",
    "expo-facebook": "^12.2.0",
    "expo-status-bar": "^2.2.3",
    "firebase": "^12.0.0"
  }
}
