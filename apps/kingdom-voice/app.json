{
  "expo": {
    "name": "Kingdom Voice",
    "slug": "kingdom-voice",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Kingdom Voice Logo.png",
    "scheme": "kingdomvoice",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "pro.kingdomcollective.voice",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Kingdom Voice needs microphone access to record your audio content and podcasts.",
        "NSSpeechRecognitionUsageDescription": "Kingdom Voice uses speech recognition to transcribe your audio recordings into text.",
        "NSPhotoLibraryUsageDescription": "Kingdom Voice needs photo library access to import images for your audio content."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Kingdom Voice Logo.png",
        "backgroundColor": "#FF6B35"
      },
      "edgeToEdgeEnabled": true,
      "package": "pro.kingdomcollective.voice",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Kingdom Voice Logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF6B35"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Kingdom Voice to access your microphone to record audio content and podcasts."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}