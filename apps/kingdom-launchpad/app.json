{
  "expo": {
    "name": "Kingdom Launchpad",
    "slug": "kingdom-launchpad",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Kingdom Launchpad Logo.png",
    "splash": {
      "image": "./assets/images/Kingdom Launchpad Logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#2C3E50"
    },
    "scheme": "kingdomlaunchpad",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "pro.kingdomcollective.launchpad",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Kingdom Launchpad needs camera access to take photos for your product mockups and content.",
        "NSPhotoLibraryUsageDescription": "Kingdom Launchpad needs photo library access to import images for your product content.",
        "NSPhotoLibraryAddUsageDescription": "Kingdom Launchpad needs permission to save your product images to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Kingdom Launchpad Logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "pro.kingdomcollective.launchpad",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Kingdom Launchpad Logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Kingdom Launchpad to access your camera for product photos and content creation."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}