{
  "expo": {
    "name": "Kingdom Lens",
    "slug": "kingdom-lens",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Kingdom Lens Logo.png",
    "scheme": "kingdomlens",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "pro.kingdomcollective.lens",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Kingdom Lens needs camera access to take photos and create content.",
        "NSPhotoLibraryUsageDescription": "Kingdom Lens needs photo library access to import and save your photos.",
        "NSPhotoLibraryAddUsageDescription": "Kingdom Lens needs permission to save your edited photos to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Kingdom Lens Logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "pro.kingdomcollective.lens",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Kingdom Lens Logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Kingdom Lens to access your camera to take photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}