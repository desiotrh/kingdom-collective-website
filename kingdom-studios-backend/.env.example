# Kingdom Studios Backend Environment Configuration

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
NODE_ENV=development
API_VERSION=v1

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MongoDB Connection (primary database)
MONGODB_URI=mongodb://localhost:27017/kingdom-studios

# Redis (caching and sessions)
REDIS_URL=redis://localhost:6379

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# FIREBASE ADMIN (Server-side Firebase)
# ==============================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ==============================================
# AI SERVICES
# ==============================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENROUTER_API_KEY=sk-or-your_openrouter_key_here

# ==============================================
# PAYMENT PROCESSING
# ==============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==============================================
# E-COMMERCE APIS
# ==============================================
ETSY_API_KEY=your_etsy_api_key
ETSY_SHARED_SECRET=your_etsy_shared_secret
PRINTIFY_API_KEY=your_printify_api_key
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_STORE_URL=your-store.myshopify.com

# ==============================================
# EMAIL SERVICES
# ==============================================
# SMTP Configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ConvertKit
CONVERTKIT_API_KEY=your_convertkit_api_key
CONVERTKIT_API_SECRET=your_convertkit_api_secret

# Mailchimp
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1

# SendGrid for transactional emails
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@kingdomstudios.app

# ==============================================
# SOCIAL MEDIA APIS
# ==============================================
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ==============================================
# ANALYTICS
# ==============================================
GOOGLE_ANALYTICS_PRIVATE_KEY_ID=your_ga_private_key_id
GOOGLE_ANALYTICS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_ga_private_key\n-----END PRIVATE KEY-----\n"
GOOGLE_ANALYTICS_CLIENT_EMAIL=your_ga_service_account@your-project.iam.gserviceaccount.com
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga_property_id

# ==============================================
# ANALYTICS PROVIDERS
# ==============================================
# Google Analytics 4 (Server-side)
GA4_MEASUREMENT_ID=G-your_measurement_id
GA4_API_SECRET=your_ga4_api_secret

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Facebook Analytics
FACEBOOK_PIXEL_ID=your_facebook_pixel_id
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Amplitude
AMPLITUDE_API_KEY=your_amplitude_api_key

# ==============================================
# API KEYS MANAGEMENT
# ==============================================
# Comma-separated list of valid API keys for client authentication
VALID_API_KEYS=dev-key-123,prod-key-456,mobile-app-key-789

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ==============================================
# FILE STORAGE
# ==============================================
# AWS S3 for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=kingdom-studios-uploads
AWS_REGION=us-east-1

# Cloudinary (Alternative for images)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

